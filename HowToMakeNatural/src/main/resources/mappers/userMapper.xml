<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="userMapper">
	<!-- 개인 블로그 입장시 해당 유저의 정보 가져오기 -->
    <select id="selectUserInfoForBlog" parameterType="String" resultType="com.my.vo.userVO" >
      		SELECT id,blog_nickname,blog_profile_text,blog_logo_text,blog_logo_image,blog_background_image,blog_setting_type FROM user where id=#{id}
    </select>
</mapper>